<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="137dp">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/AkagahareColor">

            <TextView
                android:id="@+id/akagahara"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawSelectorOnTop="true"
                android:textColor="@color/Black"
                android:textSize="32sp"
                android:text="@string/Akagahara"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/NarutoColor">

            <TextView
                android:id="@+id/narutoBridge"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawSelectorOnTop="true"
                android:textColor="@color/Black"
                android:textSize="32sp"
                android:text="@string/GreatNarutoBridge" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/KonohagakureColor">

            <TextView
                android:id="@+id/konoha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawSelectorOnTop="true"
                android:textColor="@color/Black"
                android:textSize="32sp"
                android:text="@string/Konohagakure"/>

        </FrameLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/clanImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/peepo"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/clanNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Undefined"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/clanImageView" />

    <TextView
        android:id="@+id/japanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/clanImageView"
        app:layout_constraintTop_toBottomOf="@id/clanNameTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>